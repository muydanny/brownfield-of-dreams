<h2>New Tutorial</h2>
<%= form_for [:admin, @tutorial] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "block col-4 field" %>
  <%= f.label :description %>
  <%= f.text_area :description, class: "block col-4 field"  %>
  <%= f.label :thumbnail %>
  <%= f.text_field :thumbnail, class: "block col-4 field"  %>

  <section class="import-youtube">
    <%= f.fields_for :playlist do |builder| %>
      <%= f.label 'Playlist ID' %>
      <%= f.text_field :playlist_id, class: "block col-4 field" %>
    <% end %>  
    <br>
    <%= link_to 'Import Youtube Playlist', "#", "data-action" => "click->tutorials#updateOrder", class: "video-position-submit btn btn-outline", id: @tutorial.id %>   
  </section>
  <br>
  <%= f.submit "Save", class: "mt2 btn btn-primary mb1 bg-teal"  %>

<% end %>
